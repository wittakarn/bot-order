{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [ "es2017", "dom" ],
        "skipLibCheck": true,
        "strict": true,
        "types": [
            "cypress"
        ],
    },
    "include": [
        "**/*.ts",
        "node_modules/@types/puppeteer/index.d.ts",
        "cypress/*/*.ts"
    ]
}